        <EditText
            android:id="@+id/integer_number"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="0"
            android:textSize="12sp"
            android:textStyle="normal"
            />

        <Button
