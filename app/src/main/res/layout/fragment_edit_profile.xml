<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="50dp"
              android:layout_marginEnd="100dp"
              android:layout_marginStart="50dp"
              android:layout_marginTop="90dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/full_name"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:background="@drawable/rectangular_background"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Abhinandan Sharma"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="normal"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Token -Id:"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/token_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:background="@drawable/rectangular_background"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Token id"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="normal"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Email -id:"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/email_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:background="@drawable/rectangular_background"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Email Id"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="normal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Clover -Id:"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/clover_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:background="@drawable/rectangular_background"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="clover id"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="normal"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Clover token:"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/clover_token"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:background="@drawable/rectangular_background"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="clover token"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="normal"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="State -Id:"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/state_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:background="@drawable/rectangular_background"
            android:lines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="State id"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="normal"/>


    </LinearLayout>


    <Button
        android:id="@+id/update_button"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="160dp"
        android:background="@drawable/button_state_selector"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
</LinearLayout>