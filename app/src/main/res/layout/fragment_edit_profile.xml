<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="100dp"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Full Name:"/>

        <EditText
            android:id="@+id/full_name"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:background="@drawable/rectangular_background"
            android:text="Abhinandan Sharma"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Token -Id:"/>

        <EditText
            android:id="@+id/token_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:background="@drawable/rectangular_background"
            android:text="Token id" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Email -id:"/>


        <EditText
            android:id="@+id/email_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textStyle="normal"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:background="@drawable/rectangular_background"
            android:text="Email Id"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="Clover -Id:"/>


        <EditText
            android:id="@+id/clover_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:textSize="14sp"
            android:background="@drawable/rectangular_background"
            android:text="clover id" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Clover token:"/>


        <EditText
            android:id="@+id/clover_token"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:background="@drawable/rectangular_background"
            android:text="clover token" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="State -Id:"/>


        <EditText
            android:id="@+id/state_id"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:background="@drawable/rectangular_background"
            android:text="State id"/>


    </LinearLayout>


    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/update_button"
        android:text="Submit"
        android:textColor="@color/white"
        android:paddingStart="5dp"
        android:layout_marginStart="160dp"
        android:paddingEnd="5dp"
        android:textAllCaps="false"
        android:background="@drawable/button_state_selector"/>
</LinearLayout>