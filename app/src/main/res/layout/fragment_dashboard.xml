<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_light_gray"
    tools:context=".ui.activities.NavigationalDrawerActivity">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginEnd="55dp"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangular_background_light_gray"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/arrow_down" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp">




        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/round_corners_profit"
            >

            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/transparent_layer_white"
                android:layout_height="25dp"
                android:text="PROFIT"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center"
                />

           <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
               android:text="$108"
               android:paddingTop="8dp"
               android:typeface="sans"
               android:gravity="center_horizontal"
               android:textColor="@color/white"
               android:textSize="45dp"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="16 July to 22 July"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:background="@drawable/round_corner_transparent"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:text="more info"
                    android:textSize="13dp"
                    android:textColor="#80ffffff"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_widget"
                    />


            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_marginStart="55dp"
            android:background="@drawable/round_corner_revenue"
            >

            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/transparent_layer_white"
                android:text="REVENUE"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="25dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="$128"
                android:paddingTop="8dp"
                android:typeface="sans"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="45dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="July 23- Today"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:background="@drawable/round_corner_transparent"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:text="Total Revenue"
                    android:textSize="13dp"
                    android:textColor="#80ffffff"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_widget"
                    />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_marginStart="55dp"
            android:background="@drawable/round_corners_updates"
            >

            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/transparent_layer_white"
                android:layout_height="25dp"
                android:text="UPDATES"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="65"
                android:paddingTop="8dp"
                android:typeface="sans"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="45dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="New Products"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:background="@drawable/round_corner_transparent"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:text="Product Updates "
                    android:textSize="13dp"
                    android:textColor="#80ffffff"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_widget"
                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNDERSTOCKED CATEGORY"
                android:textColor="@color/dark_gray"
                android:paddingEnd="10dp"
                android:paddingStart="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/background_light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="400dp"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"/>


                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:layout_marginStart="100dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/primary_color"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="STORY ABOUT WEEK OF JULY 23,2017"
                        android:layout_height="35dp" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="12dp"
                            android:layout_marginStart="15dp"
                            android:gravity="center_vertical"
                            android:text="TOTAL REVENUE  $108"
                            android:drawableEnd="@drawable/icon_home_gray"
                            android:layout_marginEnd="15dp"
                            />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/background_light_gray"/>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="12sp"
                            android:layout_marginStart="15dp"
                            android:gravity="center_vertical"
                            android:drawableEnd="@drawable/icon_home_gray"
                            android:text="PRODUCT UPDATED  560"
                            android:layout_marginEnd="15dp"/>





                </LinearLayout>

            </LinearLayout>


        </LinearLayout>





</LinearLayout>
