<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#64C5B1</item>
        <item name="colorPrimaryDark">#64C5B1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorControlNormal">@color/signup_light_gray</item>
        <item name="colorControlActivated">#64C5B1</item>
        <item name="colorControlHighlight">#64C5B1</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000000</item>
    </style>
    <style name="Divider_White">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="Divider_light_gray">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#e6e7e8</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyToolBar" parent="AppTheme">
        <item name="android:color">#64C5B1</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DarkGrayText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="LightGrayText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="LightGrayTextSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chat_light_gray</item>
    </style>

    <style name="BlueBoldText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingWhiteText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/signup_light_gray</item>
        <item name="colorControlNormal">@color/signup_light_gray</item>
        <item name="colorControlActivated">#6dc7ff</item>
        <item name="colorControlHighlight">#6dc7ff</item>
    </style>



    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
